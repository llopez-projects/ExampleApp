<Window x:Class="wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf"
        mc:Ignorable="d"
        Title="ExampleApp" Height="450" Width="800"
        Background="#1E1E1E" Foreground="White">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5,2"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Formulario de alta -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Nombre:" />
            <TextBox x:Name="txtFirstName" Margin="0,5" />
            
            <TextBlock Text="Apellido:" />
            <TextBox x:Name="txtLastName" Margin="0,5" />
            
            <TextBlock Text="Email:" />
            <TextBox x:Name="txtEmail" Margin="0,5" /> 
            
            <TextBlock Text="Fecha ingreso:" />
            <TextBox x:Name="txtDateHired" Margin="0,5" />

            <TextBlock Text="Departmento:" />
            <TextBox x:Name="txtDepartment" Margin="0,5" />

            <Button Content="Guardar" Click="Guardar_Click" Margin="0,10" />
        </StackPanel>

        <!-- Separador -->
        <Rectangle Grid.Column="1" Fill="Gray" Width="1" />

        <!-- Lista de empleados -->
        <StackPanel Grid.Column="2">
            <TextBlock Text="Lista de empleados" FontWeight="Bold" Margin="0,0,0,10" />            
            <ListBox x:Name="lstEmployees" SelectionChanged="lstEmployees_SelectionChanged" DisplayMemberPath="FullName">
                
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
